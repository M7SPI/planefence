# modesmixer2 service for systemd
[Unit]
Description=PlaneTweet
Wants=network.target
After=network.target
[Service]
RuntimeDirectory=/usr/share/planefence
RuntimeDirectoryMode=0755
ExecStart=/bin/bash /usr/share/planefence/planetweet.sh
SyslogIdentifier=PlaneTweet
Type=simple
Restart=on-failure
RestartSec=30
RestartPreventExitStatus=64
Nice=-5
[Install]
WantedBy=default.target
